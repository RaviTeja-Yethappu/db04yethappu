extends layout 
 
block content 
  h1= title 
 
  form(id='MallForm', action="/resource/mall", method="POST") 
    div.form-group 
        label.mallAttr(for='mall_type') mall_type  
        input#mall_type(type='text', name='mall_type') 
    div.form-group 
        label.mallAttr(for='quantity') quantity   
        input#quantity(type='text', name='quantity') 
    div.form-group 
        label.priceAttr(for='price') price 
        input#price(type='number', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['MallForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 